$header-height = 50px
$base-color = #9e9e9e

body
  margin 0px

#header
  position fixed
  top 0px
  left 0px
  right 0px
  
  height $header-height
  
#headerContainer
  position relative
  top -50px
  
  height 100px
  width 900px
  
  margin auto
  
  background-color lighten($base-color, 85%)
  
  border-bottom-left-radius 10px
  border-bottom-right-radius 10px
  
  transition top 1s

#login
  height 35px
  
  padding 10px

#header #navigation
  float left

#navigationList
  list-style none
  
  margin 0px
  
  font-size 25px

.navigationItem
  float left
  
  margin 0px 10px

#header #account
  float right

#content
  width 860px
  
  margin auto
  padding-top $header-height
  
  overflow auto
  
  background-color $base-color

h1
  text-align center

.contentDiv
  margin 5px
  padding 5px
  
  background-color lighten($base-color, 62%)
  
  border-radius 10px

#joinDialogContainer
  position fixed
  top 0px
  left 0px
  right 0px
  bottom 0px
  
  background-color black
  opacity 0.7

#joinDialogTable
  height 100%
  
  margin auto;
  
  display table

#joinDialogCell
  display table-cell
  vertical-align middle

#joinDialog
  

#gameArea
  float left
  
  text-align center

#sidebarDiv
  width 100%

#playerList
  margin 0px

#colorPicker
  text-align center

.pickerSlider
  width 100%

#colorPreview
  width 100%
  height 50px

#sizePicker
  text-align center

#field
  background-color #efefef
  // background-image url('http://www.wallsave.com/wallpapers/1024x768/paper-texture/158664/paper-texture-textures-crumpled-158664.jpg')

#gameSidebar
  float right
  
  width 860px - 512px - 20px